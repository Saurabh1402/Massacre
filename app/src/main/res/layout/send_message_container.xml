<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eee"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/send_message_background"
        android:padding="6dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/image_triangle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kya chal raha"
        android:id="@+id/send_message_container_message"
        android:textColor="@color/send_message_text_color"
        android:textSize="@dimen/message_text_size"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:20 pm"
            android:textSize="@dimen/time_text_size"
            android:textColor="@color/time_text_color"
            android:id="@+id/send_message_container_time"
            android:layout_gravity="end"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:tint="@color/time_text_color"
            android:id="@+id/pending_or_sent_imageView"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/image_triangle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/triangle"
        android:elevation="5dp"
        android:tint="@color/send_message_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="gone"
        android:id="@+id/send_messageId_text_view"
        />
</RelativeLayout>